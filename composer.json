{
    "name": "humbug/php-scoper",
    "description": "Prefixes all PHP namespaces in a file or directory.",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        },
        {
            "name": "Théo Fidry",
            "email": "theo.fidry@gmail.com"
        },
        {
            "name": "Pádraic Brady",
            "email": "padraic.brady@gmail.com"
        }
    ],

    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "composer/package-versions-deprecated": "^1.8",
        "fidry/console": "^0.5.0",
        "jetbrains/phpstorm-stubs": "^v2022.1",
        "nikic/php-parser": "^4.12",
        "symfony/console": "^5.2 || ^6.0",
        "symfony/filesystem": "^5.2 || ^6.0",
        "symfony/finder": "^5.2 || ^6.0",
        "symfony/polyfill-php80": "^1.23",
        "symfony/polyfill-php81": "^1.24",
        "thecodingmachine/safe": "^1.3 || ^2.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.1",
        "humbug/box": "^4.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.0"
    },
    "replace": {
        "symfony/polyfill-php73": "*"
    },

    "bin": ["bin/php-scoper"],
    "autoload": {
        "files": [
            "src/functions.php"
        ],
        "psr-4": {
            "Humbug\\PhpScoper\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/functions.php"
        ],
        "psr-4": {
            "Humbug\\PhpScoper\\": "tests/"
        }
    },

    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "platform": {
            "php": "8.1.0"
        },
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
